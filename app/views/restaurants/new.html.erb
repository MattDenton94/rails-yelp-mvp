<h1>New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: "Name" %>
  <%= f.input :address, label: "Address" %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], label: "Category", prompt: "Select a category" %>
  <%= f.button :submit, "Create Restaurant" %>
<% end %>
